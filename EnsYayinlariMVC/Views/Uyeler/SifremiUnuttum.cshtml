
@{
    ViewBag.Title = "SifremiUnuttum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 col-md-6 form-container">
            <div class="col-lg-8 col-md-12 col-sm-9 col-xs-12 form-box">
                <div class="logo mt-5 mb-3 text-center">
                    <img src="~/images/hakkimizda-logo.jpg" width="150">
                </div>
                <div class="reset-form d-block">
                    <form class="reset-password-form">
                        <h4 class="mb-3">Şifremi Sıfırla</h4>
                        <p class="mb-3 text-white">
                            Lütfen sisteme kayıtlı mail adresinizi giriniz:
                        </p>
                        <div class="form-input">
                            <span><i class="fa fa-envelope"></i></span>
                            <input type="email" placeholder="E-Posta Adresi" required>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn">Şifremi Sıfırla</button>
                        </div>
                    </form>
                </div>
                <div class="reset-confirmation d-none">
                    <div class="mb-4">
                        <h4 class="mb-3">Link mail adresinize gönderilmiştir.</h4>
                        <h6 class="text-white">Lütfen gelen kutunuzu kontrol ediniz!</h6>
                    </div>
                    <div>
                        <a href="@Url.Action("Giris","Uyeler")">
                            <button type="submit" class="btn">Giriş Yap</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-md-6 d-none d-md-block image-container"></div>
    </div>
</div>

<script type="text/javascript">
		function PasswordReset() {
			$('form.reset-password-form').on('submit', function(e){
				e.preventDefault();
				$('.reset-form')
				.removeClass('d-block')
				.addClass('d-none');
				$('.reset-confirmation').addClass('d-block');
			});
		}

		window.addEventListener('load',function(){
			PasswordReset();
		});
</script>
