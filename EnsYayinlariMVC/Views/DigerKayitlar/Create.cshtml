@model EnsYayinlariMVC.Models.DigerKayitlar

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutCikisYap.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="body-dnm">
        <br> <br>
        <h1 id="title"> Sorun Bildirme Ekranı</h1>
        <P id="description">
            <Table>Lütfen yaşadığınız sorunu bizlere yazın.</Table>
        </P>
        <div id="body-deneme" class="text-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Ad, "Ad", htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Soyad, "Soyad", htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.Soyad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Soyad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EPosta, "EPosta", htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.EPosta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EPosta, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Sorun, "Sorun", htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.Sorun, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Sorun, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <input type="submit" id="submit" value="Oluştur" onclick="mesajSorun()" />
            </div>
        </div>
    </div>
}

    <script>
        function mesajSorun() {
            alert("Sorun bildiriminiz alınmıştır.");
        }
    </script>
