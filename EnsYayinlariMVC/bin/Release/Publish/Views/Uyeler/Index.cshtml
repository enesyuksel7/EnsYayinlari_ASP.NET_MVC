@model IEnumerable<EnsYayinlariMVC.Models.Uyeler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCikisYap.cshtml";
}

<div style="background-color:green">
    <p>
        <a class="btn btn-primary" href="@Url.Action("Admin","Uyeler")">Panele Dön</a>
        <a class="btn btn-dark" href="@Url.Action("Create","Uyeler")">Yeni Kayıt</a>
    </p>
    <table class="table text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eposta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KullaniciAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sifre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Eposta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KullaniciAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sifre)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.UyeID }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Detaylar", "Details", new { id = item.UyeID }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.UyeID }, new { @class = "btn btn-danger" }) |
                </td>
            </tr>
        }

    </table>
</div>
